@model List<DatosPrueba.ViewModel.SocioCuenta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().NumeroCuenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Saldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Estado)
            </th>
            <th>
                <label>Socio</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @if (item.Estado == 1)
                {
                    <label>Activado</label>
                }
                else
                {
                    <label>Desactivado</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreSocio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumeroCuenta">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumeroCuenta">Details</a> |
                @if (item.Estado == 1)
                {
                    <a asp-action="Desactivar" asp-route-id="@item.NumeroCuenta">Desactivar</a>
                }
                else
                {
                    <a asp-action="Activar" asp-route-id="@item.NumeroCuenta">Activar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
